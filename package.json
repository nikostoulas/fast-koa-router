{
  "name": "fast-koa-router",
  "version": "1.4.1",
  "description": "",
  "main": "build/middleware.js",
  "scripts": {
    "clean": "rm -rf ./build",
    "prebuild": "npm run clean",
    "build": "tsc -p src",
    "prewatch": "npm run clean",
    "watch": "tsc -w -p src",
    "prepublishOnly": "npm run build && npm test",
    "pretest": "tslint src/*.ts",
    "test": "TS_NODE_PROJECT='./test/tsconfig.json' nyc mocha"
  },
  "author": "Nikos Kostoulas <nikostoulas@gmail.com>",
  "repository": "nikostoulas/fast-koa-router",
  "license": "ISC",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@koa/router": "^12.0.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "koa": "^2.15.3",
    "mocha": "^10.4.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "snap-shot-it": "^7.9.10",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typescript": "^5.4.5"
  }
}
