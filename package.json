{
  "name": "fast-koa-router",
  "version": "0.2.2",
  "description": "",
  "main": "build/middleware.js",
  "scripts": {
    "clean": "rm -rf ./build",
    "prebuild": "npm run clean",
    "build": "tsc -p src",
    "prewatch": "npm run clean",
    "watch": "tsc -w -p src",
    "prepublishOnly": "npm run build && npm test",
    "pretest": "tslint src/*.ts",
    "test": "nyc mocha"
  },
  "author": "Nikos Kostoulas <nikostoulas@gmail.com>",
  "repository": "nikostoulas/fast-koa-router",
  "license": "ISC",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.8",
    "koa": "^2.6.1",
    "koa-router": "^7.4.0",
    "mocha": "^6.1.4",
    "nyc": "^14.0.0",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
