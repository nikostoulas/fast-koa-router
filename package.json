{
  "name": "fast-koa-router",
  "version": "1.3.1",
  "description": "",
  "main": "build/middleware.js",
  "scripts": {
    "clean": "rm -rf ./build",
    "prebuild": "npm run clean",
    "build": "tsc -p src",
    "prewatch": "npm run clean",
    "watch": "tsc -w -p src",
    "prepublishOnly": "npm run build && npm test",
    "pretest": "tslint src/*.ts",
    "test": "nyc mocha"
  },
  "author": "Nikos Kostoulas <nikostoulas@gmail.com>",
  "repository": "nikostoulas/fast-koa-router",
  "license": "ISC",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "devDependencies": {
    "@koa/router": "^8.0.8",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.8",
    "koa": "^2.11.0",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "snap-shot-it": "^7.9.2",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "tslint": "^6.0.0",
    "typescript": "^3.8.2"
  }
}
